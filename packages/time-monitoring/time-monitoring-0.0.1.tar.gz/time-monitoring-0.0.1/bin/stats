#!/usr/bin/env python
import argparse
from time_monitor import (
     REPORT_FILE,
     read_report
)


parser = argparse.ArgumentParser(description='Generate pdf invoice')
parser.add_argument('-r', "--report", type=str, help="report number to check for statistics [default: current report]")
args = parser.parse_args()

if args.report is None:
    args.report = REPORT_FILE
activities, outputs, totals, messages, dates = read_report(args.report)
for a, t in zip(activities, totals):
    print('{}: {}'.format(a, t[1]), flush=True)
