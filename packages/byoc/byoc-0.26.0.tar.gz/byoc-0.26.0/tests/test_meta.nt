test_meta_attr:
  -
    id: base
    obj:
      > class DummyConfig(Config):
      >     def load(self):
      >         yield DictLayer({'x': 1}, location='/path/to/file')
      >
      > class DummyObj:
      >     __config__ = [DummyConfig]
      >     meta = byoc.meta_attr()
      >     x = byoc.attr()
      >
      > obj = DummyObj()
      > obj.x
    expected:
      x:
        type: LayerMeta
        location: /path/to/file
  -
    id: never-accessed
    obj:
      > class DummyObj:
      >     meta = byoc.meta_attr()
      >     x = byoc.attr()
    expected:
      x: NeverAccessedMeta
